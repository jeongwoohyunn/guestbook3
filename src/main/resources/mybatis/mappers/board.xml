<mapper namespace="board">
	<!-- <select id="getTotalCount" parameterType="string" resultType="int">
		<![CDATA[
			select count(*) from board
		]]>
		<if test="_parameter != null and _parameter !=''">
			<![CDATA[
				where title like '%${_parameter }%'
			]]>
		</if>
	</select> -->
	
	<insert id="insert" parameterType="boardvo">
		<choose>
			<when test="groupNo == null">
			<![CDATA[
			insert 
			  into board
			values (null, #{title }, #{contents }, sysdate, 0, 0, 0...)
			]]>
			</when>
			<otherwise>
			<![CDATA[
			insert 
			  into board
			values (null, #{title }, #{contents }, sysdate, #{groupNo }, #{depth }, #{user_no})
			]]>
			</otherwise>
		</choose>
	</insert>
	<delete id="delete" parameterType="boardvo">
		<![CDATA[
			delete from board where no= #{no}
		]]>
	</delete>
	<update id="updateHit">
		<![CDATA[
			update board set hit = hit + 1 where no = #{no}
		]]>
	</update>
	<update id="update">
		<![CDATA[
			update board set title=#{title}, contents=#{contents} where no= vo.#{no}
		]]>
	</update>
</mapper>
